@model IMS.ViewModels.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Incident Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .auth-box {
            max-width: 400px;
            margin: auto;
            padding: 30px;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card auth-box">
            <div class="card-body login-card-body">
                <div class="text-center">
                    <i class="fas fa-user-plus fa-3x text-success"></i>
                    <h3 class="mt-2">Register</h3>
                </div>

                <form method="post" asp-action="newuser">
                    <!-- Full Name -->
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="full_name" placeholder="Full Name" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="full_name" class="text-danger"></span>

                    <!-- Email -->
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" asp-for="email" placeholder="Email" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="email" class="text-danger"></span>

                    @* <!-- Department Dropdown --> *@
                    @* <div class="input-group mb-3"> *@
                    @*     <select class="form-control" asp-for="department" required> *@
                    @*         <option value="" disabled selected>Select Department</option> *@
                    @*         <option value="IT">IT</option> *@
                    @*         <option value="HR">HR</option> *@
                    @*         <option value="Finance">Finance</option> *@
                    @*         <option value="Operations">Operations</option> *@
                    @*         <option value="Support">Support</option> *@
                    @*     </select> *@
                    @*     <div class="input-group-append"> *@
                    @*         <div class="input-group-text"> *@
                    @*             <span class="fas fa-building"></span> *@
                    @*         </div> *@
                    @*     </div> *@
                    @* </div> *@
                    @* <span asp-validation-for="department" class="text-danger"></span> *@

                    <input type="hidden" name="role" value="user">
                    <input type="hidden" name="department" value="NONE">

                    <!-- Password -->
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="password" class="text-danger"></span>

                    <!-- Password -->
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" name="confirmpassword" placeholder="Password" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="confirmpassword" class="text-danger"></span>


                    <!-- Register Button -->
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-success btn-block">Register</button>
                        </div>
                    </div>
                </form>
                <p class="mt-3 text-center">Already have an account? <a asp-action="" class="text-primary">Login</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

</body>
</html>
